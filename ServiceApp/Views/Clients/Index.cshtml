@model IEnumerable<ServiceApp.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
@foreach (var item in Model){
    <div class="col-md-4">
        <div class="panel panel-primary">

                <div class="panel-heading">
                    <h3 class="panel-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h3>
                </div>
                <div class="panel-body">
                    Address:
                    @Html.DisplayFor(modelItem => item.Address) <br />
                    Home Phone:
                    @Html.DisplayFor(modelItem => item.HomePhone) <br />
                    Cell Phone:
                    @Html.DisplayFor(modelItem => item.CellPhone) <br />
                    Alternate Phone:
                    @Html.DisplayFor(modelItem => item.AlternatePhone) <br />
                    <br />

                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </div>
        </div>
    </div>
}
</div>